---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ServiceCard from '../components/ServiceCard.astro';
import '../styles/global.css';

const services = [
  {
    icon: "💡",
    title: "Conception UX/UI",
    description: "Création d’interfaces intuitives, modernes et centrées sur l'utilisateur pour maximiser l'expérience digitale."
  },
  {
    icon: "⚙️",
    title: "Développement Web",
    description: "Sites performants, responsives et sur-mesure avec les dernières technologies comme Astro, React et Laravel."
  },
  {
    icon: "📈",
    title: "SEO & Performance",
    description: "Optimisation technique et sémantique pour améliorer la visibilité de votre site sur les moteurs de recherche."
  },
  {
    icon: "📱",
    title: "Applications mobiles",
    description: "Développement d'apps cross-platform (iOS/Android) performantes grâce à des outils modernes comme React Native."
  },
  {
    icon: "🔒",
    title: "Sécurité & Maintenance",
    description: "Surveillance, mises à jour, sauvegardes et protection contre les failles pour assurer la tranquillité de vos projets."
  },
  {
    icon: "🎨",
    title: "Identité visuelle",
    description: "Création de logos, chartes graphiques et branding complet pour donner une image forte à votre entreprise."
  }
];
---

<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Nos Services - PixelPerfect</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@3.3.2/dist/tailwind.min.css" rel="stylesheet">
  </head>
    <Header />
  <body class="bg-gray-50 text-gray-800 font-sans">
    <main class="max-w-6xl mx-auto px-6 py-20">
      <h1 class="text-5xl font-extrabold text-indigo-700 mb-12 text-center">Nos Services</h1>
      <p class="text-lg text-center text-gray-600 mb-16">
        Une expertise complète pour accompagner vos projets digitaux, du design à la mise en ligne.
      </p>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-10">
        {services.map(service => (
          <ServiceCard
            icon={service.icon}
            title={service.title}
            description={service.description}
          />
        ))}
      </div>
    </main>
      <Footer />

  </body>
</html>
